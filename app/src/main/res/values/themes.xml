<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
     Base Theme
    -->
    <style name="Theme.NoDrama" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/action_bar</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--
     No Action Bar Theme (Pre-Login screens)
    -->
    <style name="Theme.NoDramaNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/action_bar</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--
     Custom Action Bar Colour
    -->
    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/action_bar</item>
    </style>
</resources>